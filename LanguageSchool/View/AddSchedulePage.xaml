<Page x:Class="LanguageSchool.View.AddSchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LanguageSchool.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddSchedulePage">

    <Grid Background="White" Margin="20">
        <StackPanel Width="400" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <Label Content="Предмет" />
            <TextBox x:Name="SubjectBox" />

            <Label Content="Преподаватель (ID)" />
            <TextBox x:Name="TeacherIdBox" />

            <Label Content="Начало" />
            <DatePicker x:Name="StartDatePicker" />
            <Label Content="Окончание" />
            <DatePicker x:Name="EndDatePicker" />

            <Button Content="Добавить занятие" Click="Save_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
