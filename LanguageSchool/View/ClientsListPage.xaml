<Page x:Class="LanguageSchool.View.ClientsListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LanguageSchool.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClientsListPage">

    <Grid Background="White" Margin="20">
        <StackPanel>
            <TextBlock Text="Список клиентов" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <DataGrid x:Name="ClientsDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Имя" Binding="{Binding User.FirstName}" Width="*"/>
                    <DataGridTextColumn Header="Фамилия" Binding="{Binding User.LastName}" Width="*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding User.Email}" Width="*"/>
                    <DataGridTextColumn Header="Телефон" Binding="{Binding User.Phone}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
