<Page x:Class="LanguageSchool.View.MessagesListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LanguageSchool.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MessagesListPage">

    <Grid Background="White" Margin="20">
        <StackPanel>
            <TextBlock Text="История сообщений" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <DataGrid x:Name="MessagesDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Отправитель" Binding="{Binding Sender.FirstName}" Width="*"/>
                    <DataGridTextColumn Header="Получатель" Binding="{Binding Receiver.FirstName}" Width="*"/>
                    <DataGridTextColumn Header="Текст" Binding="{Binding Text}" Width="2*"/>
                    <DataGridTextColumn Header="Время" Binding="{Binding SentAt}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
