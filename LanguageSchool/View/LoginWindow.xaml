<Window x:Class="LanguageSchool.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LanguageSchool.View"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid Background="White" Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Email" />
            <TextBox x:Name="EmailBox" Width="200" />

            <TextBlock Text="Пароль" Margin="0,10,0,0" />
            <PasswordBox x:Name="PasswordBox" Width="200" />

            <Button Content="Войти" Width="100" Margin="0,15,0,0" Click="Login_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
