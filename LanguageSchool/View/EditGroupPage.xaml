<Page x:Class="LanguageSchool.View.EditGroupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LanguageSchool.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditGroupPage">

    <Grid Background="White" Margin="20">
        <StackPanel Width="300" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Название группы" />
            <TextBox x:Name="GroupNameBox" />
            <Button Content="Сохранить" Click="Save_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
