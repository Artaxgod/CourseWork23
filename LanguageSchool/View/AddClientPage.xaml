<Page x:Class="LanguageSchool.View.AddClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LanguageSchool.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddClientPage">

    <Grid Background="White" Margin="20">
        <StackPanel Width="400" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Добавить клиента" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <Label Content="Имя" />
            <TextBox x:Name="FirstNameBox" />

            <Label Content="Фамилия" />
            <TextBox x:Name="LastNameBox" />

            <Label Content="Отчество" />
            <TextBox x:Name="MiddleNameBox" />

            <Label Content="Email" />
            <TextBox x:Name="EmailBox" />

            <Label Content="Телефон" />
            <TextBox x:Name="PhoneBox" />

            <Label Content="Дата рождения" />
            <DatePicker x:Name="BirthDatePicker" />

            <Label Content="Пол" />
            <ComboBox x:Name="GenderBox">
                <ComboBoxItem Content="Мужской" />
                <ComboBoxItem Content="Женский" />
            </ComboBox>

            <Label Content="Пароль" />
            <PasswordBox x:Name="PasswordBox" />

            <Label Content="Доп. информация" />
            <TextBox x:Name="InfoBox" Height="60" AcceptsReturn="True"/>

            <Button Content="Добавить клиента" Click="Save_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
