<Page x:Class="LanguageSchool.View.EditServicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LanguageSchool.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditServicePage">

    <Grid Background="White" Margin="20">
        <StackPanel Width="400" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Название" />
            <TextBox x:Name="TitleBox" />

            <Label Content="Описание" />
            <TextBox x:Name="DescriptionBox" Height="80" AcceptsReturn="True"/>

            <Label Content="Цена" />
            <TextBox x:Name="PriceBox" />

            <Button Content="Сохранить изменения" Click="Save_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
