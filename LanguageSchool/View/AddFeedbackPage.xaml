<Page x:Class="LanguageSchool.View.AddFeedbackPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LanguageSchool.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddFeedbackPage">

    <Grid Background="White" Margin="20">
        <StackPanel Width="400" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="ID клиента" />
            <TextBox x:Name="ClientIdBox" />

            <Label Content="Отзыв" />
            <TextBox x:Name="TextBoxFeedback" Height="100" AcceptsReturn="True"/>

            <Button Content="Отправить отзыв" Click="Save_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
