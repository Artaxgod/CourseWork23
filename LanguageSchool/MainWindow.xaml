<Window x:Class="LanguageSchool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LanguageSchool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#2c3e50">
            <TextBlock x:Name="WelcomeText" FontSize="14" Foreground="White" Margin="10,5"/>
            <Separator Margin="0,5"/>
            <Button Content="Клиенты" x:Name="ClientsBtn" Click="Clients_Click" Margin="5"/>
            <Button Content="Преподаватели" x:Name="TeachersBtn" Click="Teachers_Click" Margin="5"/>
            <Button Content="Группы" x:Name="GroupsBtn" Click="Groups_Click" Margin="5"/>
            <Button Content="Услуги" x:Name="ServicesBtn" Click="Services_Click" Margin="5"/>
            <Button Content="Расписание" x:Name="ScheduleBtn" Click="Schedule_Click" Margin="5"/>
            <Button Content="Дом. задания" x:Name="HomeworkBtn" Click="Homework_Click" Margin="5"/>
            <Button Content="Сообщения" x:Name="MessagesBtn" Click="Messages_Click" Margin="5"/>
            <Button Content="Отзывы" x:Name="FeedbackBtn" Click="Feedback_Click" Margin="5"/>
            <Button Content="Оплаты" x:Name="PaymentsBtn" Click="Payments_Click" Margin="5"/>
            <Separator Margin="10"/>
            <Button Content="Выход" Click="Logout_Click" Margin="5"/>
        </StackPanel>

        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
